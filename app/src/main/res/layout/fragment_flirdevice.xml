<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_all_default_double"
    tools:context=".ui.FlirDeviceDialogFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_flirdevice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/flirdevice_title"
        app:titleTextColor="@color/dark_bg_light_primary_text" />

    <FrameLayout
        android:id="@+id/viewgroup_flirdevice_fragmentcontainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_flirdevice" />

</androidx.constraintlayout.widget.ConstraintLayout>